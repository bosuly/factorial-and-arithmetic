package project1;

/**
 *
 * @author USER
 */
public class facto {
    private int number;
    

    public facto(int number) {
        this.number = number;
    }

    public long calculateFactorial() {
        long factorial = 1;
        for (int i = 1; i <= number; i++) {
            factorial *= i;
        }
        return factorial;
    }

    public void displayResult() {
        System.out.println("Factorial of " + number + " is " + calculateFactorial());
            System.out.println("------------------------------------------------");
    }
    
      


    public long calculateArithmetic() {
        long Arithmetic = 1;
        for (int i = 1; i <= number; i++) {
            Arithmetic += i;
        }
        return Arithmetic;
    }

    public void displayResultArithmetic() {
        System.out.println("Arithmetic of " + number + " is " + calculateArithmetic());
    
    }
}
